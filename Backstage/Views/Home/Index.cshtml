@section endJS{
    <script src="~/backstage_js/Utility.js"></script>
    <script src="~/backstage_js/Color.js"></script>
    <script>

        var ctx1 = document.getElementById("horizontalBar");
        const barDirection = {
        horizontal: 'horizontalBar'
        };

        BarChart(ctx1, barDirection.horizontal);

        //繪製Bar長條圖
        function BarChart(context, barChartDirection) {
            if (!(barChartDirection == 'bar' || barChartDirection == 'horizontalBar')) {
                return;
            }

            var myChart = new Chart(context, {
                type: barChartDirection,
                data: {
                    labels: ['@Model[0].Album_Name', '@Model[1].Album_Name', '@Model[2].Album_Name', '@Model[3].Album_Name', '@Model[4].Album_Name', '@Model[5].Album_Name', '@Model[6].Album_Name'],
                    datasets: [{
                        label: '專輯銷售金額',
                        data: [@Model[0].TotalAmount, @Model[1].TotalAmount, @Model[2].TotalAmount, @Model[3].TotalAmount, @Model[4].TotalAmount, @Model[5].TotalAmount, @Model[6].TotalAmount],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(145, 125, 54,0.2 )'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(145, 125, 54, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        xAxes: [{
                            ticks: {
                                beginAtZero: true,
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero: true,
                            }
                        }],
                    }
                }
            });
        }

        var sum = @(Hit[0].Hits + Hit[1].Hits + Hit[2].Hits + Hit[3].Hits + Hit[4].Hits + Hit[5].Hits + Hit[6].Hits + Hit[7].Hits + Hit[8].Hits);


       
        



        //Pie Chart
        var ctxPie = document.getElementById("peiChart");
        var pieChart = new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: ['@Hit[0].Name', '@Hit[1].Name', '@Hit[2].Name', '@Hit[3].Name', '@Hit[4].Name', '@Hit[5].Name' ,'@Hit[6].Name','@Hit[7].Name','@Hit[8].Name'],
                datasets: [{
                    data: [@Value[0], @Value[1], @Value[2], @Value[3], @Value[4], @Value[5], @Value[6] ,@Value[7],@Value[8]],
                    backgroundColor: [
                        window.chartColors.red,
                        window.chartColors.blue,
                        window.chartColors.yellow, 
                        window.chartColors.green,
                        window.chartColors.purple,
                        window.chartColors.pink,
                        window.chartColors.orange,
                        window.chartColors.grey,
                        window.chartColors.white
                    ]
                }],
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: '專輯點擊率%'
                },
                tooltips: {
                    mode: 'point',
                    intersect: true,
                   
                },
                legend: {
                    position: 'left',
