@model IEnumerable<Backstage.ViewModel.AlbumViewModel>

    @foreach (var m in Model)
    {
        <tr class="context">
            <td>
                @m.Album_id
            </td>

            <td>
                @m.Album_Name
            </td>
            <td>
                @m.Company
            </td>
            <td>
                @m.About
            </td>
            <td>
                @m.Singer_id
            </td>
            <td>
                @m.Datetime
            </td>
            <td>
                @m.Price
            </td>
            <td>
                @m.Pic
            </td>
            <td>
                @m.Hits
            </td>

            <td>
                @m.WeekHits
            </td>
            <td>
                @m.MonthHits
            </td>
            <td>
                <button>@Html.ActionLink("Edit", "Edit", new { id = m.Album_id })</button>
                <button>@Html.ActionLink("Delete", "Delete", new { id = m.Album_id })</button>
            </td>
    </tr>
}



