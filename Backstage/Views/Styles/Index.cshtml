@model IEnumerable<Backstage.Models.Style>

@{
    ViewBag.Title = "Index";
}

@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet" />
}

<div class="right_col" role="main">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("Index", "Styles", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Searching" style="margin-left:10px">
    }
    <table class="table">
        <tr class="header">
            <th>
                @Html.DisplayNameFor(model => model.Album.Album_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style_type)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    暫無資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="context">
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Album_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Style_type)
                    </td>
                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { id = item.Style_id })</button>
                        <button>@Html.ActionLink("Delete", "Delete", new { id = item.Style_id })</button>                        
                    </td>
                </tr>
            }
        }
    </table>
</div>

