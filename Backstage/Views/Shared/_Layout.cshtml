<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    <style>
        .right_col {
            margin-bottom: 0;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chartjs")
    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/nprogress.css" rel="stylesheet" />
    <link href="~/Backstage/green.css" rel="stylesheet" />
    <link href="~/Backstage/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" />
    <link href="~/Backstage/jqvmap.min.css" rel="stylesheet" />
    <link href="~/Backstage/daterangepicker.css" rel="stylesheet" />
    <link href="~/Backstage/custom.min.css" rel="stylesheet" />
</head>
<body style="padding-top: 0;padding-bottom:0">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="navbar nav_title" style="border: 0;">
                            @Html.ActionLink("Soulful", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Home/Index">Dashboard</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> UI Elements <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="general_elements.html">General Elements</a></li>
                                        <li><a href="media_gallery.html">Media Gallery</a></li>
                                        <li><a href="typography.html">Typography</a></li>
                                        <li><a href="icons.html">Icons</a></li>
                                        <li><a href="glyphicons.html">Glyphicons</a></li>
                                        <li><a href="widgets.html">Widgets</a></li>
                                        <li><a href="invoice.html">Invoice</a></li>
                                        <li><a href="inbox.html">Inbox</a></li>
                                        <li><a href="calendar.html">Calendar</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-table"></i> Tables <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @*項目新增的地方*@
                                        <li><a href="/TableServices/Index">服務資料</a></li>
                                        <li><a href="/Service_types/Index">服務類型</a></li>
                                        <li><a href="/Service_details/Index">服務細節</a></li>
                                        <li><a href="/Designer_Schedule/Index">班表</a></li>

                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-bar-chart-o"></i> Data Presentation <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="chartjs.html">Chart JS</a></li>
                                        <li><a href="chartjs2.html">Chart JS2</a></li>
                                        <li><a href="morisjs.html">Moris JS</a></li>
                                        <li><a href="echarts.html">ECharts</a></li>
                                        <li><a href="other_charts.html">Other Charts</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="login.html">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu d-flex">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav ml-auto">
                        <div class=" navbar-right d-flex">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (TempData.ContainsKey("Name"))
                                {
                                    <div class="admin_name">@TempData["Name"].ToString()</div>
                                    TempData.Keep();
                                }
                            }
                            <div class="icon_logout btn">
                                <a href="/AdminAccount/SignOut"><i class="fa fa-sign-out pull-right"></i></a>
                            </div>
                        </div>
                    </nav>
                    <nav class="nav navbar-nav ml-auto">

                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>

                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                                    <li>@Html.ActionLink("關於", "About", "Home")</li>
                                    <li>@Html.ActionLink("連絡人", "Contact", "Home")</li>
                                </ul>
                                @Html.Partial("Index")
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)


    <script src="~/backstage_js/jquery.min.js"></script>
    <script src="~/backstage_js/bootstrap.bundle.min.js"></script>
    <script src="~/backstage_js/fastclick.js"></script>
    <script src="~/backstage_js/nprogress.js"></script>
    <script src="~/backstage_js/Chart.min.js"></script>
    <script src="~/backstage_js/gauge.min.js"></script>
    <script src="~/backstage_js/bootstrap-progressbar.min.js"></script>
    <script src="~/backstage_js/skycons.js"></script>

    <script src="~/backstage_js/jquery.flot.js"></script>
    <script src="~/backstage_js/jquery.flot.pie.js"></script>
    <script src="~/backstage_js/jquery.flot.resize.js"></script>
    <script src="~/backstage_js/jquery.flot.stack.js"></script>
    <script src="~/backstage_js/jquery.flot.time.js"></script>

    <script src="~/backstage_js/jquery.flot.orderBars.js"></script>
    <script src="~/backstage_js/jquery.flot.spline.min.js"></script>
    <script src="~/backstage_js/curvedLines.js"></script>

    <script src="~/backstage_js/jquery.vmap.js"></script>
    <script src="~/backstage_js/jquery.vmap.world.js"></script>
    <script src="~/backstage_js/jquery.vmap.sampledata.js"></script>

    <script src="~/backstage_js/moment.min.js"></script>
    <script src="~/backstage_js/daterangepicker.js"></script>

    <script src="~/backstage_js/custom.min.js"></script>
</body>
</html>
