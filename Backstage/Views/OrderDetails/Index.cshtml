@model IEnumerable<Backstage.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet" />
}

<div class="right_col" role="main">

    <div class="feature">
        <div class="col-lg-6">
            <button>@Html.ActionLink("Create New", "Create")</button>
        </div>
        <div class="col-lg-6">
            @using (Html.BeginForm("Index", "OrderDetails", FormMethod.Get))
            {
                <div class="search">
                    @Html.TextBox("searching")<input type="submit" value="Searching" style="margin-left:15px">
                </div>
            }
        </div>
    </div>

    <table class="table">
        <tr class="header">
            <th>
                @Html.DisplayNameFor(model => model.Album.Album_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.AspNetUsers_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    暫無資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="context">
                    <td>
                        @Html.DisplayFor(modelItem => item.Album.Album_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.AspNetUsers_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { id = item.OrderDetail_id })</button>
                        <button>@Html.ActionLink("Delete", "Delete", new { id = item.OrderDetail_id })</button>
                    </td>
                </tr>
            }
        }

    </table>
</div>

