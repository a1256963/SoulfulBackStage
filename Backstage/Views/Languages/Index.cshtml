@model IEnumerable<Backstage.Models.Language>

@{
    ViewBag.Title = "Index";
}

@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet" />
}

<div class="right_col" role="main">
    <!-- top tiles -->
    <div class="row" style="display: inline-block;height:1381px">
        
        <p>@Html.ActionLink("Create New", "Create",null,new{ @class = "btn btn-warning" })</p>
       
                <table class="table">
                    <tr class="header">
                        <th>
                            Language
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="context">
                            <td>
                                @Html.DisplayFor(modelItem => item.Language_type)
                            </td>
                            <td>
                               @Html.ActionLink("Edit", "Edit", new { id = item.Language_id },new { @class = "btn btn-success" })
                               @Html.ActionLink("Delete", "Delete", new { id = item.Language_id },new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
        
    </div>
</div>