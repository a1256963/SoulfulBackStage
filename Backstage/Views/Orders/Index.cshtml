@model IEnumerable<Backstage.Models.Order>

@{
    ViewBag.Title = "Index";
}
    <div class="right_col" role="main">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        @using (Html.BeginForm("Index", "Orders", FormMethod.Get))
        {
            @Html.TextBox("searching")<input type="submit" value="Searching" style="margin-left:10px">
        }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUsers.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Datetime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecieverName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecieverPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecieverAdress)
                </th>
                <th></th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5" style="color:red">
                        暫無資料
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Datetime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecieverName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecieverPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecieverAdress)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Order_id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Order_id })
                        </td>
                    </tr>
                }
            }

        </table>
    </div>

