@*@model IEnumerable<Backstage.Models.Singer>*@
@using Backstage.Models;
@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<Singer>
@{
    ViewBag.Title = "Index";
}
@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}
<div class="right_col" role="main">
   

    <div class="feature">
        <div class="col-lg-6">
            <button>@Html.ActionLink("Create New", "Create")</button>
        </div>
        <div class="col-lg-6">
            @using (Html.BeginForm("Index", "Singers", FormMethod.Get))
            {
                <div class="search">
                    @Html.TextBox("searchString")<input type="submit" value="Searching" style="margin-left:15px">
                </div>
            }
        </div>
    </div>
    

    <table class="table">
        <tr class="header">
            <th>
                Singer_id
            </th>
            <th>
                @Html.ActionLink("Language", "Index", new { sortOrder = ViewBag.FirstNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.LastNameSortParm })
            </th>
            <th>
                Gender
            </th>
            <th>
                Country
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    暫無資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="context">
                    <td>
                        @Html.DisplayFor(modelItem => item.Singer_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language.Language_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { id = item.Singer_id }) </button>
                        <button>@Html.ActionLink("Delete", "Delete", new { id = item.Singer_id })</button>
                    </td>
                </tr>
            }
        }
    </table>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
