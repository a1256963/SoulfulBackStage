@model IEnumerable<Backstage.Models.Singer>

@{
    ViewBag.Title = "Index";
}
@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet"/>
}
<div class="right_col" role="main">

    <div class="feature">
        <div class="col-lg-6">
            <button>@Html.ActionLink("Create New", "Create")</button>
        </div>
        <div class="col-lg-6">
            @using (Html.BeginForm("Index", "Singers", FormMethod.Get))
            {
                <div class="search">
                    @Html.TextBox("searching")<input type="submit" value="Searching" style="margin-left:15px">
                </div>
            }
        </div>
    </div>
    

    <table class="table">
        <tr class="header">
            <th>
                ID
            </th>
            <th>
                Language
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    暫無資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="context">
                    <td>
                        @Html.DisplayFor(modelItem => item.Singer_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language.Language_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { id = item.Singer_id }) </button>
                        <button>@Html.ActionLink("Delete", "Delete", new { id = item.Singer_id })</button>
                    </td>
                </tr>
            }
        }
    </table>
</div>
