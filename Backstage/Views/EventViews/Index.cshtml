@model IEnumerable<Backstage.Models.EventView>

@{
    ViewBag.Title = "Index";
}
@section topCSS{
    <link href="~/Asset/Css/table.css" rel="stylesheet" />
}
<div class="right_col" role="main" style="padding-top:0">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("Index", "EventViews", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Searching" style="margin-left:10px">
    }
    <table class="table">
        <tr class="header">
            <th>
                @Html.DisplayNameFor(model => model.Singer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    暫無資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="context">
                    <td>
                        @Html.DisplayFor(modelItem => item.Singer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datetime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.About)
                    </td>
                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { id = item.Event_id })</button>
                        <button>@Html.ActionLink("Delete", "Delete", new { id = item.Event_id })</button>
                        
                    </td>
                </tr>
            }
        }
    </table>
</div>

